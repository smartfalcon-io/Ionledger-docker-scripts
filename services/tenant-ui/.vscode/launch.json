  "version": "0.2.0",
  "configurations": [
    {
      "name": "backend - run dev",
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        "dev"
      ],
      "runtimeExecutable": "npm",
      "skipFiles": [],
      "type": "node",
      "env": {}
    },
    {
      "name": "frontend - run dev",
      "request": "launch",
      "cwd":"${workspaceFolder}/frontend", 
      "runtimeArgs": [
        "run-script",
        "dev"
      ],
      "runtimeExecutable": "npm",
      "skipFiles": [],
      "type": "node",
      "env": {}
    },
    {
      "name": "frontend - chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173/",
      "webRoot": "${workspaceFolder}/frontend",
      "breakOnLoad": true,
      "sourceMapPathOverrides": {
        "webpack:///./src/*": "${webRoot}/*"
      }
    },

    

  ]
}
